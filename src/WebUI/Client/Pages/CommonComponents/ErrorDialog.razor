<style>
.error-list{
	max-height: 400px;
	overflow-y: auto;
}
</style>

<MudDialog DisableSidePadding="true" Scrollable="true" ClassContent="px-6 py-4">
	<DialogContent>
		<MudItem Class="d-flex justify-content-between align-items-center mb-2">
                <MudText Typo="Typo.h6">
                    @Title.ToString()
                </MudText>
                <MudIconButton Icon="@Icons.Material.Rounded.Close" OnClick="Cancel" Variant="Variant.Filled" Color="Color.Dark" Size="Size.Small" Class="rounded-circle"></MudIconButton>
        </MudItem>

        <MudDivider DividerType="DividerType.FullWidth" Class="mb-3" Light=false />

        <MudText>@($"{Errors.Count} error(s) occurred")</MudText>

        <MudText Typo="Typo.caption">
            Please fix the following errors before continuing.
        </MudText>

        <div class="mt-2 error-list">
            @foreach (var error in Errors)
            {
                <MudText Class="mb-1 text-danger pe-2">@(error)</MudText>
            }
        </div>
    </DialogContent>
</MudDialog>