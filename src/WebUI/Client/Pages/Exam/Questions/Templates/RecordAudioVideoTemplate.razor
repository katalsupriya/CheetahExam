<MudForm Model="Model" Form="Form">

    <MudItem Class="row">
        <MudItem Class="col">
            <b>Record Audio/Video</b>
        </MudItem>
    </MudItem>

    <MudItem Class="row">
        <span>@Model.Name</span>
    </MudItem>

    <MudItem Class="row mt-2">
        <MudImage Width="568" Height="315" Src="@(Model.Media is not null ? Model.Media.Url : "")" >
        </MudImage>
    </MudItem>

    <MudItem Class="row">
        <MudItem Class="col d-flex justify-content-end">
            <MudItem Class="row">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" Disabled="true">Submit</MudButton>
            </MudItem>
        </MudItem>
    </MudItem>

</MudForm>
