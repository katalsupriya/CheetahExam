@using CheetahExam.WebUI.Shared.Common.Models.Exams

<MudItem Class="row">
    <MudItem Class="col"><b>@Question.Name</b></MudItem>
</MudItem>

<MudRadioGroup T="int" @bind-Value='SelectedOption'>

    @for (var i = 0; i < Question.Options.Count; i++)
    {
        var option = Question.Options[i];
        <MudItem Class="row">
            <MudItem Class="col" style="display: flex; justify-content: start; align-items: center;">
                <MudRadio T="int" Color="Color.Primary" Value="@i" Disabled="true" Size="Size.Small">@option.Name</MudRadio>
            </MudItem>
        </MudItem>
    }
</MudRadioGroup>

<MudItem Class="row">
    <MudItem Class="col d-flex justify-content-end">
        <MudItem Class="row">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" Disabled="true">Submit</MudButton>
        </MudItem>
    </MudItem>
</MudItem>